@model Assessment_Management_System.Models.Submission

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Submission</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="AssessmentID" value="@ViewBag.assessmentSelected.ID" />
        <div class="form-group">
            <label asp-for="Assessment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @ViewBag.assessmentSelected.Title
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label name="file" class="col-md-2 control-label">File</label>
                <input type="file" name="file"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
